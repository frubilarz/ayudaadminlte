<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@paciente, :html => { :role => "form" }) do |f| %>
        <% if @paciente.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h4><%= pluralize(@paciente.errors.count, "error") %> prohibido guardar este paciente:</h4>

            <ul>
            <% @paciente.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

      <div class="form-group">
        <%= f.label :nombre %>
        <%= f.text_field :nombre, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :edad %>
        <%= f.text_field :edad, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :rut %>
        <%= f.text_field :rut, :class => "form-control" %>
      </div>
          <div class="form-group">
            <%= f.label :fecha_nacimiento %>
            <%= f.date_select :fecha_nacimiento, prefix: :start_date %>
          </div>
      <div class="form-group">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</section>
