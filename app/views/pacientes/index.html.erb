<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Pacientes </h1>
    <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear paciente',nuevo_paciente_path %></span>

  </section>
<% end %>

<section class="content invoice">
  <table class="table">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Edad</th>
      <th >Rut</th>
      <th>Fecha Nacimiento</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
    </thead>
    <tbody>
    <% @pacientes.each do |paciente|%>
        <tr>
          <td><%= paciente.nombre %></td>
          <td><%= paciente.edad %> </td>
          <td> <%= paciente.rut %> </td>
          <td><%= paciente.fecha_nacimiento %></td>
          <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', paciente %> </td>
          <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',editar_paciente_path(paciente) %></td>
          <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar',paciente , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
        </tr>
    <%end%>
    </tbody>
  </table>
  <%= will_paginate @pacientes, renderer: BootstrapPagination::Rails %>
</section>